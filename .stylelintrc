{
  "rules": {
    "block-no-empty": null,
    "color-no-invalid-hex": true,
    "comment-empty-line-before": [ "always", {
      "ignore": ["stylelint-commands", "after-comment"]
    } ],
    "declaration-colon-space-after": "always",
    "indentation": 2,
    "max-empty-lines": 1,
    "rule-empty-line-before": [ "never"],
    "unit-whitelist": ["em", "%", "px", "vw", "vh", "s"]
  }
}
